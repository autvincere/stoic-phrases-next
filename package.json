{
  "name": "stoic-phrases-next",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "populate-dev": "NODE_ENV=development NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/app/seed/seed-database.ts",
    "populate-prod": "NODE_ENV=production NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/app/seed/seed-database.ts",
    "test-ts-node": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/app/seed/test-ts-node.ts",
    "verify-seed": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node src/app/seed/verifyIntegrity.js",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles",
    "test:unit": "jest --verbose --testPathPattern=unit",
    "test:integration": "jest --verbose --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "cloudinary": "^2.5.1",
    "dotenv": "^16.4.7",
    "next": "15.1.3",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "babel-jest": "^29.7.0",
    "eslint": "^9.25.0",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
