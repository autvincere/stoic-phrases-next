{
  "name": "stoic-phrases-next",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development dotenv -e .env.local -- next dev",
    "dev:test": "next dev",
    "build": "prisma generate && NODE_ENV=production dotenv -e .env.production -- next build",
    "start": "NODE_ENV=production dotenv -e .env.production -- next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "populate-dev": "NODE_ENV=development dotenv -e .env.local -- tsx src/app/seed/seed-database.ts",
    "populate-prod": "NODE_ENV=production dotenv -e .env.production -- tsx src/app/seed/seed-database.ts",
    "test-ts-node": "tsx src/app/seed/test-ts-node.ts",
    "verify-seed": "tsx src/app/seed/verifyIntegrity.js",
    "setup-test-db": "NODE_ENV=test node src/app/seed/setup-test-db.js",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles",
    "test:unit": "jest --verbose src/app/seed/__tests__/seed-database.test.ts",
    "test:integration": "jest --verbose --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "verify-commit": "eslint --max-warnings=0 $(git diff --cached --name-only --diff-filter=ACMR | grep -E '\\.(js|jsx|ts|tsx)$')",
    "prisma:dev": "NODE_ENV=development dotenv -e .env.local -- npx prisma",
    "prisma:prod": "NODE_ENV=production dotenv -e .env.production -- npx prisma",
    "prisma:generate:dev": "npm run prisma:dev -- generate",
    "prisma:generate:prod": "npm run prisma:prod -- generate",
    "prisma:migrate:dev": "npm run prisma:dev -- migrate dev",
    "prisma:migrate:prod": "npm run prisma:prod -- migrate deploy",
    "prisma:db:reset:dev": "npm run prisma:dev -- migrate reset",
    "prisma:db:reset:prod": "npm run prisma:prod -- migrate reset",
    "prisma:studio:dev": "npm run prisma:dev -- studio",
    "prisma:studio:prod": "npm run prisma:prod -- studio",
    "db:init:dev": "NODE_ENV=development dotenv -e .env.local -- tsx src/scripts/init-db.ts",
    "db:init:prod": "NODE_ENV=production dotenv -e .env.production -- tsx src/scripts/init-db.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "cloudinary": "^2.5.1",
    "dotenv": "^16.4.7",
    "next": "15.1.3",
    "prisma": "^6.6.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "babel-jest": "^29.7.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.25.0",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.2.6",
    "ts-jest-mock": "^1.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
